<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalcyonManager.Views.ConfigurationPage"
             Title="Settings and Help"
             BackgroundImageSource="sky.jpg">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ScrollView Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical">
                <Button Text="Household Managment" BackgroundColor="#40568d"  Margin="1,10,0,0" Clicked="Button_Clicked"></Button>
                <Button Text="Help" BackgroundColor="#40568d"  Margin="1,10,0,0" Clicked="HelpButton_Clicked"></Button>
                <Button Text="Error Logs"  BackgroundColor="#40568d"  Margin="1,10,0,0" Clicked="ErrorLogs_Clicked"></Button>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
